@model XptoOrcamentos.Models.Servico.ServicoViewModelNew

<form asp-action="Create" method="post">
    <div class="container-fluid small">
        <div class="row">
            <div class="col-sm-6">
                <h4>Novo Serviço</h4>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-controller="Servico" asp-action="Index"><i class="fas fa-home"></i> Voltar para lista de Serviços</a>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="submit" asp-controller="Servico" asp-action="Create" class="btn btn-outline-success" value="Salvar Serviço" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Nome">Serviço</label>
                <div class="form-group">
                    <input type="text" asp-for="Nome" class="form-control" />
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}