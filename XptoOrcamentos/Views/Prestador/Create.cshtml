@model XptoOrcamentos.Models.Prestador.PrestadorViewModelNew

<form asp-action="Create" method="post">
    <div class="container-fluid small">
        <div class="row">
            <div class="col-sm-6">
                <h4>Novo Prestador</h4>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-controller="Prestador" asp-action="Index"><i class="fas fa-home"></i> Voltar para lista de Prestador</a>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="submit" asp-controller="Prestador" asp-action="Create" class="btn btn-outline-success" value="Salvar Prestador" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.IdEmpresa">Empresa</label>
                <div class="form-group">
                    <select asp-for="@Model.IdEmpresa" class="form-control" asp-items="@Model.Empresas">
                        <option disabled selected>Selecione a empresa</option>
                    </select>
                    <span asp-validation-for="@Model.IdEmpresa" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Nome">Nome</label>
                <div class="form-group">
                    <input type="text" asp-for="Nome" class="form-control" />
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.CPF">CPF</label>
                <div class="form-group">
                    <input type="text" asp-for="CPF" class="form-control" />
                    <span asp-validation-for="@Model.CPF" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}