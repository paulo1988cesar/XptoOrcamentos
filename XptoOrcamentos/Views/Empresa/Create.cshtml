@model XptoOrcamentos.Models.Empresa.EmpreaViewModelNew

<form asp-action="Create" method="post">
    <div class="container-fluid small">
        <div class="row">
            <div class="col-sm-6">
                <h4>Nova Empresa</h4>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-controller="Empresa" asp-action="Index"><i class="fas fa-home"></i> Voltar para lista de Empresas</a>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="submit" asp-controller="Empresa" asp-action="Create" class="btn btn-outline-success" value="Salvar Empresa" />
                </div>
            </div>
        </div>
       
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Nome">Nome</label>
                <div class="form-group">
                    <input type="text" asp-for="Nome" class="form-control" />
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.CNPJ">CNPJ</label>
                <div class="form-group">
                    <input type="text" asp-for="CNPJ" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g,'')" class="form-control" />
                    <span asp-validation-for="@Model.CNPJ" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}